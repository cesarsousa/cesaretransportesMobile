<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout 
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:background="@color/preto"
    	android:padding="5dip">	
    
		<ImageView
   			android:src="@drawable/detalhe_cliente_header"
   			android:layout_width="fill_parent" 
   			android:layout_height="wrap_content"/>
   		   			
   		<TextView  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="Opções de Visualização de clientes"
    		android:gravity="center"
    		android:textColor="@color/laranjadoEscuro"
    		android:textStyle="bold"
    		android:textSize="15px"/>
    		
    	<LinearLayout
    			android:orientation="horizontal"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:gravity="center"
    			android:background="@color/cinzaEscuro"
    			android:paddingTop="5px"
    			android:paddingBottom="5px">
    			
    			<Button
    				android:id="@+id/opcaoVisualClientes_btListarTodos"
    				android:layout_width="fill_parent"
    				android:layout_height="wrap_content"
    				android:text="Listar Clientes Pendentes"/>
    			
    	</LinearLayout>    		
    	
    	<TextView  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="Faça uma busca por tipo."
    		android:textColor="@color/branco"
    		android:textSize="12px"/>    				
    		
    	<View 
    		android:layout_width= "fill_parent"
    		android:layout_height="1px"
    		android:background="@color/cinzaEscuro"/>
    		
    		
    	<TableLayout
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:paddingTop="5px"
    		android:shrinkColumns="1">
    		
    		<TableRow>
    			<TextView  
		    		android:layout_width="wrap_content" 
		    		android:layout_height="wrap_content"
		    		android:layout_gravity="left"		    		
		    		android:layout_weight="1" 
		    		android:text="ID:"
		    		android:textColor="@color/cinzaEscuro"
		    		android:typeface="serif"/>
		    		
		    	<EditText
		    		android:id="@+id/opcaoVisualClientes_campoId"
		    		android:layout_width="fill_parent" 
		    		android:layout_height="wrap_content"
		    		android:layout_gravity="center"
		    		android:layout_weight="3"
		    		android:numeric="integer"/>
		    		
		    	<Button
		    		android:id="@+id/opcaoVisualClientes_btBuscaId"
		    		android:layout_width="wrap_content" 
		    		android:layout_height="wrap_content"
		    		android:layout_gravity="right"
		    		android:layout_weight="1" 
		    		android:text="Buscar"/>
    		</TableRow>
    		
    		<TableRow>
    			<TextView  
		    		android:layout_width="wrap_content" 
		    		android:layout_height="wrap_content"
		    		android:layout_gravity="left"
		    		android:layout_weight="1" 
		    		android:text="Nome:"
		    		android:textColor="@color/cinzaEscuro"
		    		android:typeface="serif"/>
		    		
		    	<EditText
		    		android:id="@+id/opcaoVisualClientes_campoNome"
		    		android:layout_width="fill_parent" 
		    		android:layout_height="wrap_content"
		    		android:layout_gravity="center"
		    		android:layout_weight="3"/>
		    		
		    	<Button
		    		android:id="@+id/opcaoVisualClientes_btBuscaNome"
		    		android:layout_width="wrap_content" 
		    		android:layout_height="wrap_content"
		    		android:layout_gravity="right"
		    		android:layout_weight="1" 
		    		android:text="Buscar"/>
    		</TableRow>
    		
    		<TableRow>
    			<TextView  
		    		android:layout_width="wrap_content" 
		    		android:layout_height="wrap_content"
		    		android:layout_gravity="left"
		    		android:layout_weight="1" 
		    		android:text="Doc:"
		    		android:textColor="@color/cinzaEscuro"
		    		android:typeface="serif"/>
		    		
		    	<EditText
		    		android:id="@+id/opcaoVisualClientes_campoDocumento"
		    		android:layout_width="fill_parent" 
		    		android:layout_height="wrap_content"
		    		android:layout_gravity="center"
		    		android:layout_weight="3"
		    		android:numeric="integer"/>
		    		
		    	<Button
		    		android:id="@+id/opcaoVisualClientes_btBuscaDocumento"
		    		android:layout_width="wrap_content" 
		    		android:layout_height="wrap_content"
		    		android:layout_gravity="right"
		    		android:layout_weight="1" 
		    		android:text="Buscar"/>
    		</TableRow>    		
    	</TableLayout>   	    		    	
    		
    	<LinearLayout
    			android:orientation="horizontal"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:gravity="center"
    			android:background="@color/laranjado"
    			android:paddingTop="5px">
    			
    			<Button
    				android:id="@+id/opcaoVisualClientes_btCancelar"
    				android:layout_width= "wrap_content" 
    				android:layout_height="wrap_content"
    				android:text="Cancelar"/>   			
    	</LinearLayout> 
    		
    	<LinearLayout 
    		android:orientation="vertical"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:paddingTop="5px"
    		android:paddingBottom="5px"
    		android:background="@color/laranjadoLogo">
    		
    		<TextView    			
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="Cesare Transportes - 2011"
    			android:layout_gravity="center"
    			android:textStyle="bold"
    			android:textColor="@color/laranjado"/>
    		
    	</LinearLayout>    		    	
	</LinearLayout>
</ScrollView>
