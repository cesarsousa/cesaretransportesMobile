<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout 
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:padding="5dip">	
    
		<ImageView
   			android:src="@drawable/detalhe_cliente_header"
   			android:layout_width="fill_parent" 
   			android:layout_height="wrap_content"/>
   		   			
   		<TextView  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="Confirmação de Serviço"
    		android:gravity="center"
    		android:textColor="@color/laranjadoEscuro"
    		android:textStyle="bold"
    		android:textSize="20px"/>		
    		
    	<View 
    		android:layout_width= "fill_parent"
    		android:layout_height="1px"
    		android:background="@color/cinzaEscuro"/>
    		
    	<TextView  
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
    		android:text="Dados do orçamento"
    		android:textColor="@color/cinzaSuperEscuro"
    		android:textStyle="bold"
    		android:textSize="15px"/> 
    		
    	<TextView
    		android:id="@+id/confirmarServico_codigo"
    		android:layout_width= "wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="@color/preto"
    		android:textSize="10px"/>
    		
    	<TextView
    		android:id="@+id/confirmarServico_nome"
    		android:layout_width= "wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="@color/preto"
    		android:textSize="10px"/>
    		
    	<TextView
    		android:id="@+id/confirmarServico_origem"
    		android:layout_width= "wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="@color/preto"
    		android:textSize="10px"/>
    		
    	<TextView
    		android:id="@+id/confirmarServico_destino"
    		android:layout_width= "wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="@color/preto"
    		android:textSize="10px"/>
    		
    	<TextView
    		android:id="@+id/confirmarServico_peso"
    		android:layout_width= "wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="@color/preto"
    		android:textSize="10px"/>   	
    		
    	<TextView
    		android:id="@+id/confirmarServico_dimensao"
    		android:layout_width= "wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="@color/preto"
    		android:textSize="10px"/>	
    		
    	<LinearLayout
    			android:orientation="vertical"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:gravity="center"
    			android:background="@color/cinzaEscuro"
    			android:paddingTop="5px">
    			
    			<TextView
    				android:layout_width= "wrap_content"
    				android:layout_height="wrap_content"
    				android:text="Insira os valores abaixo e confirme"
    				android:textColor="@color/azul"
    				android:textStyle="bold"
    				android:textSize="10px"/>
    				
    				<TableLayout   
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:stretchColumns="1">
    
					    <TableRow>
			    			<TextView
			   					android:layout_width="wrap_content" 
			    				android:layout_height="wrap_content"
			    				android:text="Valor:"
			    				android:textStyle="bold"
			    				android:layout_gravity="center_vertical"
			    				android:textColor="@color/preto"/>
			    				
			    			<EditText
			   					android:id="@+id/confirmarServico_valor"  
			    				android:layout_width="fill_parent" 
			    				android:layout_height="wrap_content"
			    				android:singleLine="true"/>
			    		</TableRow>
    
					    <TableRow>
			    			<TextView
			   					android:layout_width="wrap_content" 
			    				android:layout_height="wrap_content"
			    				android:text="Data:"
			    				android:textStyle="bold"
			    				android:layout_gravity="center_vertical"
			    				android:textColor="@color/preto"/>
			    				
			    			<Button
			    				android:id="@+id/confirmarServico_btdata"
			    				android:layout_width="wrap_content" 
			    				android:layout_height="wrap_content"
			    				android:hint="Clique para alterar a data"
			    				android:text="selecionar data"/>    			
			    		</TableRow>
			    		
			    		<TableRow>
			    			<TextView
			   					android:layout_width="wrap_content" 
			    				android:layout_height="wrap_content"
			    				android:text="Veículo:"
			    				android:textStyle="bold"
			    				android:layout_gravity="center_vertical"
			    				android:textColor="@color/preto"/>
			    				
			    			<Button
			    				android:id="@+id/confirmarServico_btVeiculo"
			    				android:layout_width="wrap_content" 
			    				android:layout_height="wrap_content"			    				
			    				android:text="selecionar veiculo"/>    			
			    		</TableRow>							
					</TableLayout>   			
    	</LinearLayout>    		   	
    		
    		<LinearLayout
    			android:orientation="horizontal"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:gravity="center"
    			android:background="@color/laranjado"
    			android:paddingTop="5px">
    			
    			<Button
    				android:id="@+id/confirmarServico_btConfirmar"
    				android:layout_width= "wrap_content"
    				android:layout_height="wrap_content"
    				android:text="Confirmar"/>
    			
    			<Button
    				android:id="@+id/confirmarServico_btCancelar"
    				android:layout_width= "wrap_content" 
    				android:layout_height="wrap_content"
    				android:text="Cancelar"/>
    				
    			<Button
    				android:id="@+id/confirmarServico_btMenu"
    				android:layout_width= "wrap_content" 
    				android:layout_height="wrap_content"
    				android:text="MENU"/>   			
    		</LinearLayout> 
    		
    	<LinearLayout 
    		android:orientation="vertical"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:paddingTop="5px"
    		android:paddingBottom="5px"
    		android:background="@color/laranjadoLogo">
    		
    		<TextView    			
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="Cesare Transportes - 2011"
    			android:layout_gravity="center"
    			android:textStyle="bold"
    			android:textColor="@color/laranjado"/>
    		
    	</LinearLayout>    		    	
	</LinearLayout>
</ScrollView>
