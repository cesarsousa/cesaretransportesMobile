<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <ImageView
   		android:src="@drawable/detalhe_cliente_header"
   		android:layout_width="fill_parent" 
   		android:layout_height="wrap_content"/> 		
    
    <TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Responder OrÃ§amento"
    	android:textColor="@color/laranjadoEscuro"
    	android:gravity="left"
    	android:textStyle="bold"
    	android:textSize="15px"
    	android:padding="10px"/>
    	
    <LinearLayout
    	android:orientation="vertical"
   		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/branco"
    	android:paddingTop="5px"
    	android:paddingLeft="5px">
    	
    	<TextView
    		android:id="@+id/responderOrcamento_codigo"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="@color/preto"
    		android:textSize="10px"/>
    	
    	<TextView
    		android:id="@+id/responderOrcamento_nome"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="@color/preto"
    		android:textSize="10px"/>
    	
    	<TextView
    		android:id="@+id/responderOrcamento_email"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="@color/preto"
    		android:textSize="10px"/>
    		
    	<TextView
    		android:id="@+id/responderOrcamento_telefone"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="@color/preto"
    		android:textSize="10px"/>
    		
    	<TextView
    		android:id="@+id/responderOrcamento_origem"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="@color/preto"
    		android:textSize="10px"/>
    		
    	<TextView
    		android:id="@+id/responderOrcamento_destino"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="@color/preto"
    		android:textSize="10px"/>
    	
    	<TextView
    		android:id="@+id/responderOrcamento_peso"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="@color/preto"
    		android:textSize="10px"/>
    		
    	<TextView
    		android:id="@+id/responderOrcamento_dimensao"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="@color/preto"
    		android:textSize="10px"/>
    		
    	<TextView
    		android:id="@+id/responderOrcamento_mensagem"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="@color/preto"
    		android:textSize="10px"
    		android:paddingBottom="5px"/> 	
    
    </LinearLayout>    
    
    <TextView  
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="Digite sua mensagem"
    	android:textColor="@color/branco"
    	android:gravity="left"
    	android:textStyle="bold"
    	android:textSize="10px"
    	android:padding="10px"/>
    	
    <EditText
    	android:id="@+id/responderOrcamento_textoResposta"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:singleLine="false"
    	android:lines="3"
    	android:focusableInTouchMode="true"
    	android:paddingBottom="5px"/>    	
    	
    <LinearLayout
    	 android:orientation="horizontal"
   		 android:layout_width="fill_parent"
    	 android:layout_height="wrap_content"
    	 android:gravity="center"
    	 android:paddingTop="5px"
    	 android:background="@color/laranjado">
    	
   		<Button
   			android:id="@+id/responderOrcamento_btEnviar"
   			android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"
    		android:text="ENVIAR"/>
    	
    	<Button
   			android:id="@+id/responderOrcamento_btCancelar"
   			android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"
    		android:text="CANCELAR"/>
    	
    </LinearLayout>
    
    <LinearLayout 
    		android:orientation="vertical"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:paddingTop="5px"
    		android:paddingBottom="5px"
    		android:background="@color/laranjadoLogo">
    		
    		<TextView    			
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="Cesare Transportes - 2011"
    			android:layout_gravity="center"
    			android:textStyle="bold"
    			android:textColor="@color/laranjado"/>
    		
    </LinearLayout>    	
</LinearLayout>
</ScrollView>
