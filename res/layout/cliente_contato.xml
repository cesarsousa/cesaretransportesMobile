<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout 
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:background="@color/preto"
    	android:padding="5dip">	
    
		<ImageView
   			android:src="@drawable/detalhe_cliente_header"
   			android:layout_width="fill_parent" 
   			android:layout_height="wrap_content"/>
   		   			
   		<TextView  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="Contatos"
    		android:gravity="center"
    		android:textColor="@color/laranjadoEscuro"
    		android:textStyle="bold"
    		android:typeface="serif"
    		android:textSize="20px"/>		
    		
    	<View 
    		android:layout_width= "fill_parent"
    		android:layout_height="1px"
    		android:background="@color/cinzaEscuro"/>
    		
    	<TextView
    		android:id="@+id/clienteContato_textoEnderecoEmpresa"  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"    		
    		android:gravity="center"
    		android:textColor="@color/laranjado"
    		android:textStyle="bold"
    		android:typeface="serif"/>
    		
    	<Button
    		android:id="@+id/clienteContato_btMapaEndereco"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:text="Visualizar no mapa"
    		android:textColor="@color/azul"/>
    	
    	<View 
    		android:layout_width= "fill_parent"
    		android:layout_height="1px"
    		android:background="@color/cinzaEscuro"/>
    		
    	<TextView
    		android:layout_width="fill_parent" 
   			android:layout_height="wrap_content"
   			android:text="Mande seu email de crítica, reclamação ou sugestão."
   			android:textColor="@color/branco"
   			android:paddingBottom="10px"/>   			
   		
    	<TextView
    		android:layout_width="fill_parent" 
   			android:layout_height="wrap_content"
   			android:text="Mensagem"
   			android:textStyle="bold"
   			android:textColor="@color/laranjadoLogo"/>
   		
   		<EditText
    		android:id="@+id/clienteContato_textoEmail"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:singleLine="false"
    		android:lines="3"
    		android:paddingBottom="5px"/>
    		
    	<Button
    		android:id="@+id/clienteContato_btEnviarEmail"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:text="Enviar Email"/>
    		
    	<View 
    		android:layout_width= "fill_parent"
    		android:layout_height="2px"
    		android:background="@color/cinzaEscuro"/>
    		
    	<TextView
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="Ou utilize um de nossos canais de comunicação."
    		android:textColor="@color/branco"
    		android:gravity="center"
    		android:textStyle="bold"/>
    	   				
    			<TableLayout
    				android:layout_width="fill_parent"
    				android:layout_height="wrap_content"
    				android:background="@color/preto"
    				android:stretchColumns="1">   				
    				
    				<TableRow>
    					<ImageView
    						android:src="@drawable/gmail_icone"
    						android:layout_width="wrap_content"
    						android:layout_height="wrap_content"
    						android:layout_gravity="left"/>
    						
    					<TextView
    						android:id="@+id/clienteContato_textoEmailEmpresa"
    						android:layout_width="wrap_content"
    						android:layout_height="wrap_content"
    						android:layout_gravity="center_vertical"
    						android:gravity="right"
    						android:textColor="@color/cinzaEscuro"/>
    				</TableRow>
    				
    				<TableRow>
    					<ImageView
    						android:src="@drawable/msn_icone"
    						android:layout_width="wrap_content"
    						android:layout_height="wrap_content"
    						android:layout_gravity="left"/>
    						
    					<TextView
    						android:id="@+id/clienteContato_textoMsnEmpresa"
    						android:layout_width="wrap_content"
    						android:layout_height="wrap_content"
    						android:layout_gravity="center_vertical"
    						android:gravity="right"
    						android:textColor="@color/cinzaEscuro"/>
    				</TableRow>
    				
    				<View
    					android:layout_width="fill_parent"
    					android:layout_height="2px"
    					android:background="@color/laranjadoLogo"/>
    					
    				<TextView
    						android:id="@+id/clienteContato_TextoSemTelefone"
    						android:layout_width="wrap_content"
    						android:layout_height="wrap_content"
    						android:gravity="center"    						
    						android:textColor="@color/cinzaEscuro"/>  	
    					    				
    				<TableRow>
    					<ImageButton
    						android:id="@+id/clienteContato_btFone1"
    						android:src="@drawable/icone_ligar"
    						android:layout_width="wrap_content"
    						android:layout_height="wrap_content"
    						android:layout_gravity="left"/>
    						
    					<TextView
    						android:id="@+id/clienteContato_numeroFone1"
    						android:layout_width="wrap_content"
    						android:layout_height="wrap_content"
    						android:layout_gravity="center_vertical"
    						android:gravity="right"    						
    						android:textColor="@color/cinzaEscuro"/>
    				</TableRow>
    				
    				<TableRow>
    					<ImageButton
    						android:id="@+id/clienteContato_btFone2"
    						android:src="@drawable/icone_ligar"
    						android:layout_width="wrap_content"
    						android:layout_height="wrap_content"
    						android:layout_gravity="left"/>
    						
    					<TextView
    						android:id="@+id/clienteContato_numeroFone2"
    						android:layout_width="wrap_content"
    						android:layout_height="wrap_content"
    						android:layout_gravity="center_vertical"
    						android:gravity="right"
    						android:textColor="@color/cinzaEscuro"/>
    				</TableRow>
    				
    				<TableRow>
    					<ImageButton
    						android:id="@+id/clienteContato_btFone3"
    						android:src="@drawable/icone_ligar"
    						android:layout_width="wrap_content"
    						android:layout_height="wrap_content"
    						android:layout_gravity="left"/>
    						
    					<TextView
    						android:id="@+id/clienteContato_numeroFone3"
    						android:layout_width="wrap_content"
    						android:layout_height="wrap_content"
    						android:layout_gravity="center_vertical"
    						android:gravity="right"
    						android:textColor="@color/cinzaEscuro"/>
    				</TableRow>
    				
    			</TableLayout>   	    	
    		
    		<LinearLayout
    			android:orientation="horizontal"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:gravity="center"
    			android:background="@color/laranjado"
    			android:paddingTop="5px">    				   			
    				
    			<Button
    				android:id="@+id/clienteContato_btMenu"
    				android:layout_width= "wrap_content" 
    				android:layout_height="wrap_content"    				
    				android:text="  MENU  "/>   			
    		</LinearLayout> 
    		
    	<LinearLayout 
    		android:orientation="vertical"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:paddingTop="5px"
    		android:paddingBottom="5px"
    		android:background="@color/laranjadoLogo">
    		
    		<TextView    			
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="Cesare Transportes - 2011"
    			android:layout_gravity="center"
    			android:textStyle="bold"
    			android:textColor="@color/laranjado"/>
    		
    	</LinearLayout>    		    	
	</LinearLayout>
</ScrollView>
