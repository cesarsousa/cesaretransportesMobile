<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout 
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:background="@color/preto"
    	android:padding="5dip">	
    
		<ImageView
   			android:src="@drawable/detalhe_cliente_header"
   			android:layout_width="fill_parent" 
   			android:layout_height="wrap_content"/>
   		   			
   		<TextView  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="Recuperação de Senha"
    		android:gravity="center"
    		android:textColor="@color/laranjadoEscuro"
    		android:textStyle="bold"
    		android:textSize="20px"/>
    		
    	<TextView
    		android:id="@+id/recuperarSenha_texto"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:gravity="center"
    		android:textColor="@color/branco"
    		android:textStyle="italic"
    		android:typeface="serif"
    		android:paddingBottom="10px"/>
    		
    	<EditText
    		android:id="@+id/recuperarSenha_campoEmail"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"/>   				
    		
    	<LinearLayout
    			android:orientation="horizontal"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:gravity="center"
    			android:background="@color/laranjado"
    			android:paddingTop="10px">
    			
    			<Button
    				android:id="@+id/recuperarSenha_btEnviar"
    				android:layout_width= "wrap_content" 
    				android:layout_height="wrap_content"
    				android:text=" Enviar "/>
    			</LinearLayout> 
    		
    	<LinearLayout 
    		android:orientation="vertical"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:paddingTop="5px"
    		android:paddingBottom="5px"
    		android:background="@color/laranjadoLogo">
    		
    		<TextView    			
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="Cesare Transportes - 2011"
    			android:layout_gravity="center"
    			android:textStyle="bold"
    			android:textColor="@color/laranjado"/>
    		
    	</LinearLayout>    		    	
	</LinearLayout>
</ScrollView>
