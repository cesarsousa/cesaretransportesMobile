<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout 
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:background="@color/preto"
    	android:padding="5dip">	
    
		<ImageView
   			android:src="@drawable/detalhe_cliente_header"
   			android:layout_width="fill_parent" 
   			android:layout_height="wrap_content"/>
   			
   		<TextView  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="Informação do Cliente"
    		android:gravity="center"
    		android:textColor="@color/laranjadoEscuro"
    		android:textStyle="bold"
    		android:textSize="20px"/>
   	
   		<TextView
   			android:id="@+id/detalheCliente_nome"  
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"   		
    		android:textColor="@color/laranjado"
    		android:textSize="15px"/>
    		
    	<TextView
   			android:id="@+id/detalheCliente_endereco"  
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"   		
    		android:textColor="@color/laranjado"
    		android:textSize="10px"/>
    		
    	<View 
    		android:layout_width= "fill_parent"
    		android:layout_height="1px"
    		android:background="@color/cinzaEscuro"/>  
    		
    	<TextView
   			android:id="@+id/detalheCliente_dataCadastro"  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"/>    	  		
    		
    		<TableLayout
    			android:orientation="horizontal"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:stretchColumns="1">
    			
    			<TableRow>
    			<TextView
   					android:id="@+id/detalheCliente_statusCliente"  
    				android:layout_width="wrap_content" 
    				android:layout_height="wrap_content"
    				android:layout_gravity="left"
    				android:textStyle="bold"/>
    				
    			<Button
    				android:id="@+id/detalheCliente_btLiberarStatus"
    				android:layout_width= "wrap_content" 
    				android:layout_height="wrap_content"
    				android:layout_gravity="right"
    				android:text="Confirmar cliente"/>
    			</TableRow>   			
    		</TableLayout>
    		
    	<TextView
   			android:id="@+id/detalheCliente_documento"  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"/>
    	
    	<View 
    		android:layout_width= "fill_parent"
    		android:layout_height="1px"
    		android:background="@color/cinzaEscuro"/>
    		
   	 <TextView
   			android:id="@+id/detalheCliente_telefone"  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:layout_gravity="left"
    		android:gravity="center_vertical"
    		android:textStyle="bold"/>    	
    		
    		<TableLayout
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:stretchColumns="1">
    			
    			<TableRow>   			
    			<Button
    				android:id="@+id/detalheCliente_btLigar"
    				android:layout_width= "wrap_content" 
    				android:layout_height="wrap_content"
    				android:layout_gravity="center"
    				android:text="   Ligar   "/>
    				
    			<Button
    				android:id="@+id/detalheCliente_btSms"
    				android:layout_width= "wrap_content" 
    				android:layout_height="wrap_content"
    				android:layout_gravity="right"
    				android:text="   SMS   "/>
    			</TableRow>   			
    		</TableLayout>
    	
    	<TextView
   			android:id="@+id/detalheCliente_email"  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"/>
    				
    	<Button
    		android:id="@+id/detalheCliente_btEmail"
    		android:layout_width= "wrap_content" 
    		android:layout_height="wrap_content"
    		android:text="Enviar Email"/>
    		
    	<View 
    		android:layout_width= "fill_parent"
    		android:layout_height="1px"
    		android:background="@color/cinzaEscuro"/>
    	
    	<LinearLayout
    			android:orientation="horizontal"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:gravity="center"
    			android:paddingTop="5px"
    			android:background="@color/laranjado">
    			
    			<Button
    				android:id="@+id/detalheCliente_btDeletar"
    				android:layout_width= "wrap_content" 
    				android:layout_height="wrap_content"
    				android:text="Excluir"/>
    				
    			<Button
    				android:id="@+id/detalheCliente_btMenu"
    				android:layout_width= "wrap_content" 
    				android:layout_height="wrap_content"
    				android:text="MENU"/>  			
    		</LinearLayout> 
    		
    <LinearLayout 
    		android:orientation="vertical"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:paddingTop="5px"
    		android:paddingBottom="5px"
    		android:background="@color/laranjadoLogo">
    		
    		<TextView    			
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="Cesare Transportes - 2011"
    			android:layout_gravity="center"
    			android:textStyle="bold"
    			android:textColor="@color/laranjado"/>
    		
    	</LinearLayout>
      		    	
	</LinearLayout>
</ScrollView>
